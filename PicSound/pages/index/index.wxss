.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
}

.header {
  align-items: center;
  justify-content: center;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.logo {
  width: 80px;
  height: 80px;
  margin-right: 10px;
  margin-left: 20rpx;
}

.title {
  font-size: 24px;
  font-weight: bold;
  line-height: 80rpx;
  position:relative;
  text-indent: 30rpx;
}
.title::after{
  content: '';
  position: absolute;
  width: 5rpx;
  height: 50%;
  background-color: #e084a3;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.description {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
}

.photo {
  width: 250px;
  height: 250px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
