.header {
  align-items: center;
  justify-content: center;
  display: flex;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: rgb(240, 118, 139);
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
  width: 90%;
  margin: 20rpx;
  border: 2px solid #999;
  overflow: hidden;
}

.container .showImage{
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  background-color: white;
}

.hint-text {
  font-size: 16px;
  color: #999;
}

.box{
  height: auto;
  margin: 20rpx;
  background-color: rgb(250, 235, 238);
  padding-bottom: 40rpx;
}

.line{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
  justify-content: space-between;
}
.line_text{
  font-size: 30rpx;
  color: rgb(73, 73, 73);
}
.symbol{
  color: red;
}
.picker_bar{
  width: 70%;
  background-color: white;
}

.picker{
  display: flex;
  justify-content: center;
}

.box2{
  display: flex;
  flex-direction: column;
  padding: 20rpx 0rpx ;
}

.submit-button{
  position: relative;
  left: 150rpx;
  border-radius: 50rpx;
  border: 2px solid #999;
}
.button-hover{
  background-color: rgb(248, 199, 199);
  color: #fff;
}

.input{
  height: 50rpx;
  width: 100%;
}